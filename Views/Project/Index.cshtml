@model IEnumerable<Project>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<a asp-action="create" asp-controller="Project" class="btn btn-danger">Create</a>
<table class="table">
    <thead>
        <tr>
            
            <th>Name</th>
            <th>description</th>
            <th>start date</th>
            <th>start date</th>
           
            
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
               
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>@item.Startdate</td>
                <td>@item.Enddate</td>
                
                
                <td>
                    <a asp-action="update" asp-controller="Project" asp-route-id="@item.ProjectId" class="btn btn-outline-primary">Update</a>
                    <a asp-action="delete" asp-controller="Project" asp-route-id="@item.ProjectId" class="btn btn-danger">Delete</a>
                    <a asp-action="details" asp-controller="Project" asp-route-id="@item.ProjectId" class="btn btn-outline-primary">details</a>
                </td>
            </tr>

        }
            

    </tbody>
</table>